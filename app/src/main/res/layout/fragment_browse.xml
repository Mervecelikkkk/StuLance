<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="16dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/appCompatCheckedTextView"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:background="#7100BCD4"
            android:nestedScrollingEnabled="true"
            android:queryHint="Search for freelancers and jobs"
            android:searchIcon="@drawable/ic_search"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="80dp" />

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/appCompatCheckedTextView1"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:text="Browse by category"
            android:textColor="#FFFFFF"

            android:textSize="26sp"
            android:textStyle="bold|italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="158dp" />



    </LinearLayout>
    <ListView
        android:id="@+id/lvBrowse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

    </ListView>

</RelativeLayout>